<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="es.telefonica.talentum.calculadora.MainActivity">

    <TextView
        android:id="@+id/activity_main_text_result"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp"
        android:gravity="center_vertical"
        android:text="0"
        android:padding="5dp"
        android:background="#EEEEEE"
        android:textSize="30sp"/>

    <Button
        android:id="@+id/activity_main_button_zero"
        android:layout_below="@+id/activity_main_button_one"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="0"
        android:textColor="#EEEEEE"
        android:backgroundTint="#0148B2"/>

    <Button
        android:id="@+id/activity_main_button_one"
        android:layout_below="@+id/activity_main_button_four"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="1"
        android:textColor="#EEEEEE"
        android:backgroundTint="#0148B2"/>

    <Button
        android:id="@+id/activity_main_button_two"
        android:layout_below="@+id/activity_main_button_five"
        android:layout_toRightOf="@+id/activity_main_button_one"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="2"
        android:textColor="#EEEEEE"
        android:backgroundTint="#0148B2"/>

    <Button
        android:id="@+id/activity_main_button_three"
        android:layout_below="@+id/activity_main_button_six"
        android:layout_toRightOf="@+id/activity_main_button_two"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="3"
        android:textColor="#EEEEEE"
        android:backgroundTint="#0148B2"/>

    <Button
        android:id="@+id/activity_main_button_four"
        android:layout_below="@+id/activity_main_button_seven"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="4"
        android:textColor="#EEEEEE"
        android:backgroundTint="#0148B2"/>

    <Button
        android:id="@+id/activity_main_button_five"
        android:layout_below="@+id/activity_main_button_eight"
        android:layout_toRightOf="@+id/activity_main_button_four"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="5"
        android:textColor="#EEEEEE"
        android:backgroundTint="#0148B2"/>

    <Button
        android:id="@+id/activity_main_button_six"
        android:layout_below="@+id/activity_main_button_nine"
        android:layout_toRightOf="@+id/activity_main_button_five"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="6"
        android:textColor="#EEEEEE"
        android:backgroundTint="#0148B2"/>

    <Button
        android:id="@+id/activity_main_button_seven"
        android:layout_below="@+id/activity_main_text_result"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="7"
        android:textColor="#EEEEEE"
        android:backgroundTint="#0148B2"/>

    <Button
        android:id="@+id/activity_main_button_eight"
        android:layout_below="@+id/activity_main_text_result"
        android:layout_toRightOf="@+id/activity_main_button_seven"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="8"
        android:textColor="#EEEEEE"
        android:backgroundTint="#0148B2"/>

    <Button
        android:id="@+id/activity_main_button_nine"
        android:layout_below="@+id/activity_main_text_result"
        android:layout_toRightOf="@+id/activity_main_button_eight"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="9"
        android:textColor="#EEEEEE"
        android:backgroundTint="#0148B2"/>

    <Button
        android:id="@+id/activity_main_button_add"
        android:layout_below="@+id/activity_main_text_result"
        android:layout_toRightOf="@+id/activity_main_button_nine"
        android:text="+"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:textColor="#EEEEEE"
        android:backgroundTint="#0148B2"/>

    <Button
        android:id="@+id/activity_main_button_subtract"
        android:layout_below="@+id/activity_main_button_nine"
        android:layout_toRightOf="@+id/activity_main_button_six"
        android:text="-"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:textColor="#EEEEEE"
        android:backgroundTint="#0148B2"/>

    <Button
        android:id="@+id/activity_main_button_multiply"
        android:layout_below="@+id/activity_main_button_six"
        android:layout_toRightOf="@+id/activity_main_button_three"
        android:text="*"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:textColor="#EEEEEE"
        android:backgroundTint="#0148B2"/>

    <Button
        android:id="@+id/activity_main_button_divide"
        android:layout_below="@+id/activity_main_button_three"
        android:layout_toRightOf="@+id/activity_main_button_three"
        android:text="/"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:textColor="#EEEEEE"
        android:backgroundTint="#0148B2"/>

    <Button
        android:id="@+id/activity_main_button_ce"
        android:layout_below="@+id/activity_main_button_three"
        android:layout_toRightOf="@+id/activity_main_button_zero"
        android:text="CE"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:textColor="#EEEEEE"
        android:backgroundTint="#0148B2"/>

    <Button
        android:id="@+id/activity_main_button_calculate"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:text="calculate"
        android:textColor="#EEEEEE"
        android:backgroundTint="#0148B2"/>

    <Button
        android:id="@+id/activity_main_button_point"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/activity_main_button_three"
        android:layout_toRightOf="@id/activity_main_button_ce"
        android:text="."
        android:textColor="#EEEEEE"
        android:backgroundTint="#0148B2"/>

    <Button
        android:id="@+id/activity_main_button_in_memory"
        android:text=">M"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/activity_main_button_add"
        android:textColor="#EEEEEE"
        android:backgroundTint="#0148B2"
        />

    <Button
        android:id="@+id/activity_main_button_out_memory"
        android:text="M>"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/activity_main_button_subtract"
        android:textColor="#EEEEEE"
        android:backgroundTint="#0148B2"/>

    <ImageButton
        android:id="@+id/activity_main_button_delete"
        android:src="@android:drawable/ic_input_delete"
        android:layout_below="@id/activity_main_text_result"
        android:layout_alignParentRight="true"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:textColor="#EEEEEE"
        android:backgroundTint="#0148B2"/>

</RelativeLayout>
